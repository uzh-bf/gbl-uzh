{
  "name": "@gbl-uzh/platform",
  "version": "0.3.1",
  "license": "LGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run generate",
    "build": "npm-run-all build:nexus build:graphql build:ts build:copy",
    "build:nexus": "ts-node --esm --transpile-only src/nexus.ts",
    "build:graphql": "graphql-codegen --config codegen.ts",
    "build:ts": "cross-env NODE_ENV=production tsup",
    "build:copy": "ts-node src/lib/copy.ts",
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "generate": "prisma generate"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/fragment-matcher": "4.0.1",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typed-document-node": "3.0.2",
    "@graphql-codegen/typescript": "3.0.2",
    "@graphql-codegen/typescript-operations": "3.0.2",
    "@graphql-codegen/typescript-resolvers": "3.1.1",
    "@tsconfig/node18": "1.0.1",
    "@tsconfig/recommended": "1.0.2",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "cross-env": "7.0.3",
    "fs-extra": "11.1.0",
    "jest": "29.5.0",
    "npm-run-all": "4.1.5",
    "prisma": "4.11.0",
    "rollup-plugin-copy": "3.4.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsup": "6.6.3",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "@apollo/client": "^3.7.0",
    "@prisma/client": "^4.11.0",
    "@uzh-bf/design-system": "^1.0.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.19.0",
    "graphql-yoga": "^3.0.0",
    "jsonwebtoken": "^9.0.0",
    "next": "^13.0.0",
    "nexus": "^1.3.0",
    "nookies": "^2.5.2",
    "ramda": "^0.28.0",
    "react": "^18.0.0",
    "yup": "^1.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "dependencies": {
    "random-js": "2.1.0",
    "winston": "3.9.0"
  }
}
