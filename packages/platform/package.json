{
  "name": "@gbl-uzh/platform",
  "version": "0.2.11",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run generate",
    "build": "npm-run-all build:nexus build:graphql build:ts build:copy",
    "build:nexus": "ts-node --esm --transpile-only src/nexus.ts",
    "build:graphql": "graphql-codegen --config codegen.ts",
    "build:ts": "NODE_ENV=production tsup",
    "build:copy": "ts-node src/lib/copy.ts",
    "dev": "NODE_ENV=development tsup --watch",
    "generate": "prisma generate"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.11",
    "@graphql-codegen/fragment-matcher": "3.3.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typed-document-node": "2.3.6",
    "@graphql-codegen/typescript": "2.8.1",
    "@graphql-codegen/typescript-operations": "2.5.6",
    "@graphql-codegen/typescript-resolvers": "2.7.6",
    "@tsconfig/node18": "1.0.1",
    "@tsconfig/recommended": "1.0.1",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "jest": "29.3.1",
    "npm-run-all": "4.1.5",
    "prisma": "4.6.1",
    "rollup-plugin-copy": "3.4.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsup": "6.4.0",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "@apollo/client": "^3.7.0",
    "@prisma/client": "4.6.1",
    "@uzh-bf/design-system": "^0.0.79",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.19.0",
    "graphql-yoga": "^3.0.0-next.4",
    "jsonwebtoken": "^8.5.1",
    "next": "^13.0.0",
    "nexus": "^1.3.0",
    "nookies": "^2.5.2",
    "ramda": "^0.28.0",
    "react": "^18.0.0",
    "yup": "^1.0.0-beta.8"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
