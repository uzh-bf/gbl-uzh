{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "format": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "public/**"
      ]
    },
    "dev": {
      "cache": false,
      "outputs": [
        "dist/**",
        ".next/**",
        "public/**"
      ],
      "dependsOn": [
        "@gbl-uzh/platform#build"
      ]
    },
    "start": {
      "dependsOn": [
        "^build",
        "build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "public/**"
      ]
    }
  }
}
